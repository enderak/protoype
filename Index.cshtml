@page
@model IndexModel

<h1 class="display-4">Günlük Yemek Menüsü</h1>
<hr />

<form method="get" class="mb-5">
    <div class="d-flex align-items-end">
        <div class="form-group me-3">
            <label asp-for="SeciliTarih" class="h5">Tarih Seçin:</label>
            <input asp-for="SeciliTarih" type="date" class="form-control form-control-lg" 
                   onchange="this.form.submit()" /> </div>
        <h3 class="mb-0">
            @Model.SeciliTarih.ToLongDateString() Menüsü
        </h3>
    </div>
</form>

@if (Model.GunlukMenu.Count == 0)
{
    <div class="alert alert-warning mt-4">
        Bu tarih için henüz bir menü planlanmamıştır.
    </div>
}
else
{
    <div class="row mt-4">
        @foreach (var ogunAdi in Model.OgunSirasi)
        {
            var yemekKalemi = Model.GetOgunYemegi(ogunAdi);

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">@ogunAdi</h4>
                    </div>
                    <div class="card-body d-flex flex-column">
                        @if (yemekKalemi != null)
                        {
                            <h5 class="card-title text-success">@yemekKalemi.Yemek.Ad</h5>
                            <p class="card-text">
                                **Kalori:** **@yemekKalemi.Yemek.Kalori** kcal
                            </p>
                            <hr />
                            <p class="card-text small">
                                **İçerikler:** @yemekKalemi.Yemek.Icerikler
                            </p>
                        }
                        else
                        {
                            <p class="text-muted">Bu öğün için yemek planlanmamıştır.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}