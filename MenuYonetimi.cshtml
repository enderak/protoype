@page
@model MenuYonetimiModel

<h2>Menü Oluşturma ve Yönetimi</h2>
<hr />

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-success">@TempData["Mesaj"]</div>
}

<form method="get" class="mb-4">
    <div class="d-flex align-items-end">
        <div class="form-group me-3">
            <label asp-for="SeciliTarih">Menü Tarihi Seçin:</label>
            <input asp-for="SeciliTarih" type="date" class="form-control" 
                   onchange="this.form.submit()" /> </div>
    </div>
</form>

<form method="post">
    <input type="hidden" asp-for="SeciliTarih" /> 
    
    <div class="row">
        @foreach (var ogun in Model.Ogunler)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@ogun Menüsü</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Yemek Seçimi:</label>
                            
                            <select name="SecilenMenuler[@ogun]" 
                                    class="form-select" 
                                    asp-items="Model.YemekOptions">
                                <option value="">-- Boş Bırak --</option>
                            </select>
                            
                            </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-lg btn-success">Menüyü Kaydet/Güncelle</button>
    </div>
</form>

<script>
    // Sayfa yüklendiğinde mevcut seçimi Dropdownlara yerleştirir.
    document.addEventListener('DOMContentLoaded', function () {
        @foreach (var ogun in Model.Ogunler)
        {
            // C#'tan gelen mevcut seçili ID'yi al
            var selectedId = Model.SecilenMenuler.ContainsKey(ogun) ? Model.SecilenMenuler[ogun] : null;

            if (selectedId.HasValue)
            {
                var selectElement = document.querySelector('select[name="SecilenMenuler[@ogun]"]');
                if (selectElement) {
                    selectElement.value = @selectedId;
                }
            }
        }
    });
</script>