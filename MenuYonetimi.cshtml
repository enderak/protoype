@page
@model MenuYonetimiModel

<h2>Menü Oluşturma ve Yönetimi</h2>
<hr />

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-success">@TempData["Mesaj"]</div>
}

<form method="get" class="mb-4">
    <div class="d-flex align-items-end">
        <div class="form-group me-3">
            <label asp-for="SeciliTarih">Menü Tarihi Seçin:</label>
            <input asp-for="SeciliTarih" type="date" class="form-control" 
                   onchange="this.form.submit()" />
        </div>
    </div>
</form>

<form method="post">
    <input type="hidden" asp-for="SeciliTarih" /> 
    
    <div class="row">
        @foreach (var ogun in Model.Ogunler)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@ogun Menüsü</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Yemek Seçimi (CTRL/CMD ile çoklu seçim yapabilirsiniz):</label>
                            
                            <select name="SecilenYemekIdleri[@ogun]" 
                                    class="form-select" 
                                    asp-items="Model.YemekOptions" 
                                    multiple="multiple" style="min-height: 150px;">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-lg btn-success">Menüyü Kaydet/Güncelle</button>
    </div>
</form>

<script>
    // Sayfa yüklendiğinde mevcut seçimi Dropdownlara yerleştirir.
    document.addEventListener('DOMContentLoaded', function () {
        @foreach (var ogun in Model.Ogunler)
        {
            var selectedIds = Model.SecilenYemekIdleri.ContainsKey(ogun) ? Model.SecilenYemekIdleri[ogun] : null;

            if (selectedIds != null && selectedIds.Count > 0)
            {
                var selectElement = document.querySelector('select[name="SecilenYemekIdleri[@ogun]"]');
                if (selectElement) {
                    var options = selectElement.options;
                    @foreach(var id in Model.SecilenYemekIdleri[ogun])
                    {
                        for (var i = 0; i < options.length; i++) {
                            if (options[i].value == '@id') {
                                options[i].selected = true;
                                break;
                            }
                        }
                    }
                }
            }
        }
    });
</script>